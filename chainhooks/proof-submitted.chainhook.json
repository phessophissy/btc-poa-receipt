{
  "uuid": "poa-receipt-chainhook",
  "name": "Proof of Action Receipt Indexer",
  "version": 1,
  "chain": "stacks",
  "networks": {
    "mainnet": {
      "if_this": {
        "scope": "print_event",
        "contract_identifier": "SP_DEPLOYER_ADDRESS.proof-of-action",
        "contains": "proof-submitted"
      },
      "then_that": {
        "http_post": {
          "url": "https://your-backend.com/api/webhook/proof",
          "authorization_header": "Bearer YOUR_WEBHOOK_SECRET"
        }
      },
      "start_block": 1,
      "decode_clarity_values": true,
      "include_contract_abi": false
    },
    "testnet": {
      "if_this": {
        "scope": "print_event",
        "contract_identifier": "ST_DEPLOYER_ADDRESS.proof-of-action",
        "contains": "proof-submitted"
      },
      "then_that": {
        "http_post": {
          "url": "http://localhost:3001/api/webhook/proof",
          "authorization_header": "Bearer dev-webhook-secret"
        }
      },
      "start_block": 1,
      "decode_clarity_values": true,
      "include_contract_abi": false
    }
  }
}
